{
  "manifest_version": 3,
  "name": "News Summary and Share",
  "description": "Fetch the latest news and share it on WhatsApp, Instagram, and LinkedIn.",
  "version": "1.0",
  "icons": {
    "48": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://newsapi.org/v2/*"]
}
